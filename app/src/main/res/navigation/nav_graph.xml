<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainScreen">
    <fragment
        android:id="@+id/mainScreen"
        android:name="com.example.mealplannerapplication.main_screen.view.MainScreen"
        android:label="fragment_home_screen"
        tools:layout="@layout/fragment_main_screen" >
        <action
            android:id="@+id/action_mainScreen_to_signupScreen"
            app:destination="@id/signupScreen" />
    </fragment>
    <fragment
        android:id="@+id/signupScreen"
        android:name="com.example.mealplannerapplication.signup_screen.view.SignupScreen"
        android:label="fragment_signup_screen"
        tools:layout="@layout/fragment_signup_screen" />
</navigation>