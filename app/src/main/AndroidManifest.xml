<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.MealPlannerApplication"
        tools:targetApi="31">
        <activity
            android:name=".meal_details.view.MealDetails"
            android:exported="false" />
        <activity
            android:name=".resultFromSearchView.view.ResultFromSearchActivity"
            android:exported="false" />
        <activity
            android:name=".searchByCountry.view.SearchByCountriesActivity"
            android:exported="false" />
        <activity
            android:name=".searchByIngredients.view.SearchByIngredientActivity"
            android:exported="false" />
        <activity
            android:name=".search.view.SearchActivity"
            android:exported="false" />
        <activity
            android:name=".splashScreen.view.SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".searchByCategories.view.SearchByCategoriesActivity"
            android:exported="false"
            android:label="@string/title_activity_search_by_categories"
            android:theme="@style/Theme.MealPlannerApplication.NoActionBar" />
        <activity
            android:name=".NavigationActivity"
            android:exported="false"
            android:label="NavigationActivity" />
        <activity
            android:name=".MainActivity"
            android:exported="false" />
    </application>

</manifest>